default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    build_num = latest_testflight_build_number(app_identifier: "com.eefeats.app") + 1
    increment_build_number(
      build_number: build_num,
      xcodeproj: "ios/EefEats.xcodeproj"
    )

    cert(development: false)
    sigh(app_identifier: "com.eefeats.app")

    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: "UF25XUG77C",
      code_sign_identity: "iPhone Distribution",
      profile_name: ENV["SIGH_NAME"],
      path: "ios/EefEats.xcodeproj",
      targets: ["EefEats"]
    )

    build_app(
      workspace: "ios/EefEats.xcworkspace",
      scheme: "EefEats",
      configuration: "Release",
      export_method: "app-store",
      clean: true,
      export_options: {
        provisioningProfiles: {
          "com.eefeats.app" => ENV["SIGH_NAME"]
        }
      }
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      apple_id: "6759528017",
      itc_provider: "UF25XUG77C"
    )
  end
end
